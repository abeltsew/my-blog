<div class="user_container">
    <div class="boxed img_container"></div>
         <div class=" boxed user_card">
            <h2 class="user_label"><%= @user.name %></h2>

            <p class="post_counter">Number of posts: <%= @user.posts_counter %>
         </div>
 </div>
<div class="detail_container">

    <div class="boxed">
        <h1>Bio</h1>
        <p>
        <%= @user.bio %>
        </p>
    </div>
<% @user.posts.each do |post| %>
    <div class="boxed" >
        <h1>post <%= post.title %></h1>
        <p>
        <%= post.text %>
        </p>
        <p class="comments_likes">Comments: <%= post.comment_counter %> Likes: <%= post.likes_counter %></p>
    </div>
<%end%>
    

<a href="/users/<%= @user.id%>/posts" class="all_post_btn">See all Posts</a>
</div>